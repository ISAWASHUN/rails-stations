<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>公開年</th>
      <th>概要</th>
      <th>画像</th>
      <th>上映中</th>
      <th>登録日時</th>
      <th>更新日時</th>
      <th>上映スケジュール</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.id %></td>
        <td><%= movie.name %></td>
        <td><%= movie.year %></td>
        <td><%= movie.description %></td>
        <td><img src="<%= movie.image_url %>" alt="<%= movie.name %>" width="100">
        </td>
        <td><%= movie.is_showing ? '上映中' : '上映予定' %></td>
        <td><%= movie.created_at %></td>
        <td><%= movie.updated_at %></td>
        <td>
          <% movie.schedules.each do |schedule| %>
            <%= schedule.start_time.strftime('%Y-%m-%d %H:%M') %><br>
          <% end %>
        </td>
        <td>
          <%= link_to movie.id, edit_admin_movie_path(movie) %>
          <%= link_to '削除', admin_movie_path(movie), method: :delete, data: {confirm: '投稿を削除します。よろしいですか？'} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
