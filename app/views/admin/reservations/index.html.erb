<h1>Reservations</h1>
<table>
  <thead>
    <tr>
      <th>Movie</th>
      <th>Seat</th>
      <th>Date & Time</th>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.schedule.movie.name %></td> <!-- この行を修正 -->
        <td><%= reservation.sheet.row %><%= reservation.sheet.column %></td> <!-- この行を修正 -->
        <td><%= reservation.date %> <%= reservation.schedule.start_time.strftime('%H:%M') %> - <%= reservation.schedule.end_time.strftime('%H:%M') %></td> <!-- この行を修正 -->
        <td><%= reservation.name %></td>
        <td><%= reservation.email %></td>
        <td>
          <%= link_to 'Edit', edit_admin_reservation_path(reservation) %> |
          <%= link_to 'Delete', admin_reservation_path(reservation), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
